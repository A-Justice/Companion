<UserControl x:Class="Companion_1._0.Web_Engine.NewProjectPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Companion_1._0.Web_Engine"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <WrapPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="      ProjectName: "/>
                <TextBox Width="100"/>
            </WrapPanel>
            <WrapPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="      WebAddress: "/>
                <TextBox Width="100"/>
            </WrapPanel>
            <WrapPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Project Template: "/>
                <ComboBox Width="100"/>
            </WrapPanel>
            <WrapPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="         StayOnSite: "/>
                <CheckBox IsChecked="True"/>
            </WrapPanel>
            <Button Width="70" Content="Submit" HorizontalAlignment="Right" Margin="5"/>
        </StackPanel>
        
    </Grid>
</UserControl>
